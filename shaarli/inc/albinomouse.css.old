/* --- Picture wall CSS --- */
.picwall_container { 
    color:#ffffff; 
    background-color:#FFFFFF; 
    clear:both;
    margin: 20px auto;
    width: 980px; 
}
.picwall_pictureframe {                      /*AlbinoMouse*/
    background-color: #4c4b4a;
    border: 2px solid #DDDDDD;
    border-radius: 15px;
    display: table-cell;
    float: left;
    height: 100px;
    width: 100px;
    margin: 8px;
    overflow: hidden;
    padding: 1px;
    position: relative;
    text-align: center;
    vertical-align: middle;
    z-index: 5;
}
.picwall_pictureframe img {       /*AlbinoMouse */
    margin: -5px;
    min-height: 110px;
    min-width: 110px;
} 
/* Adapt the width of the image */
.picwall_pictureframe a {text-decoration:none;color:#4C4B4A;}         /*AM couleur */

/* CSS to show title when hovering an image - no javascript required. */
.picwall_pictureframe span.info {display: none;}
.picwall_pictureframe:hover span.info {
    word-wrap: break-word;
    display:block;
    top:0px;
    position:absolute;
    border-radius: 10px;
    height: 102px;
    width: 102px;
    padding:7px;
    margin:0px 0px 0px -5px;
    font-size:8pt;
    color:#fff;
    text-align: left;
    background-color: transparent;
    background-color: rgba(0, 0, 0, 0.8);  /* FF3+, Saf3+, Opera 10.10+, Chrome, IE9 */
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#66000000,endColorstr=#66000000); /* IE6/IE9 */
}


